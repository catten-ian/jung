import http.server
import socketserver
import os

PORT = 8000

# 切换到脚本所在目录
os.chdir(os.path.dirname(os.path.abspath(__file__)))

# 启动简单的HTTP服务器
with socketserver.TCPServer(("", PORT), http.server.SimpleHTTPRequestHandler) as httpd:
    print(f"服务器已启动，访问 http://localhost:{PORT}/index.html")
    httpd.serve_forever()
